.hover-ball{
    position: fixed;
    display: flex;
    justify-content: center;
    align-items: center;
    right: 10px;bottom: 10px;
    width: 100rpx;height: 100rpx;
    border-radius: 100rpx;
    /*background-color: rgb(0,129,255);*/
    z-index: 2;
}

.hover-ball-item-1,.hover-ball-item-2,.hover-ball-item-3{
    display: flex;
    position: absolute;
    left: 0;
    justify-content: center;
    align-items: center;
    width: 100%;
    height: 100%;
    border-radius: 100rpx;
    background-color: rgb(0,129,255);
    z-index: -1;
}
.hover-ball-item-1{
    z-index: 2;
    line-height: 100rpx;
    font-size: 16px;
    text-align: center;
    color: var(--white);
    background-color: rgb(0,129,255);
}

.hover-ball:hover > .hover-ball-item-2{
    left: -122rpx;
    top: -6rpx;
}

.hover-ball:hover > .hover-ball-item-3{
    left: -53rpx;
    top: -112rpx;
}