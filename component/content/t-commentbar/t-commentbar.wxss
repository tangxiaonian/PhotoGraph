/* views/detail/childComp/t-commentbar/t-commentbar.wxss */
.t-commentbar{
    position: fixed;
    display: flex;
    align-items: center;
    bottom: 0;left: 0;
    padding: 0 10rpx;
    width: 100vw;
    height: 100rpx;
    background-color: white;
    box-shadow: -5px 0 10px 10px #ededed;
    z-index: 1;
    transition: bottom .3s;
}

.left{
    width: 150rpx;
}

.left view{
    display: inline-block;
    margin: 0 6rpx;
    font-size: 28px;
}

.center{
    flex: 1;
}

.right{
    text-align: center;
}