<!--component/common/t-navbar/t-navbar.wxml-->

<view class="t-navbar fixed-class"
      style="height:{{navbarHeight}}px;background-image: var({{bgColor}});">

    <view class="t-navbar-content"
          style="padding-top:{{statusBarHeight}}px;height:{{navbarHeight}}px;">

        <view class="t-navbar-left" bind:tap="goback">
            <slot name="left"></slot>
        </view>

        <view class="t-navbar-center">
            <slot name="center"></slot>
        </view>

        <view class="t-navbar-right">
            <slot name="right"></slot>
        </view>

    </view>

</view>