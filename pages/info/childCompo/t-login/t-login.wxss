/* pages/info/childCompo/t-login/t-login.wxss */
.login-box{

    width: 95%;

    margin: 40% auto;

    background-color: white;

    border-radius: 5px;
}

.login{

    height: 500rpx;
    padding-top: 30rpx;

}

.login-item{
    display: flex;
    height: 100rpx;
    align-items: center;
    padding: 10rpx;
    color: #000;
    border-bottom: 1px solid #888888;
}

.login-item text{

    font-size: 16px;

    font-weight: bold;

    color: black;
}

.login-item input{
    flex: 1;
    height: 100%;
    padding: 10rpx;
}

.other{
    display: flex;
    justify-content: space-between;
    margin: 5rpx 10rpx;
    color: #888888;
}

.yzm-item{
    align-items: center;
}

.login-item .yzm{
    width: auto;
    color: black;
}

.btn-group{
    width: 100%;
}

.btn-group > .qqLogin,.btn-group > .wxLogin{
    width: 95%;
    margin: 10rpx;
}
.btn-group > .qqLogin {
    margin-top: 23rpx;
    margin-bottom: 23rpx;
}
.placeholderClass{
    font-size: 17px;
}