/* views/public/childComp/theme-panel.wxss */
.theme-panel {
    position: fixed;
    left: 0;top: 0;
    right: 0;bottom: 0;
    width: 100vw;
    height: 100%;
    background-color: rgba(0, 0, 0,.5);
    border-radius: 10rpx;
    z-index: 2;
    transition: opacity .3s;
}
.theme-panel-content{
    position: fixed;
    left: 0;bottom: 0;
    width: 100vw;
    height: 40%;
    padding: 30rpx;
    background-color: var(--white);
    z-index: 1;
    animation: myAnimation .3s ease-in;
}

@keyframes myAnimation {
    0%{
        bottom: -40%;
    }
    100%{
        bottom: 0;
    }
}

.theme-title{
    display: flex;
    justify-content: space-between;
}

.theme-content{
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
}

.theme-content .item{
    width: 30%;
    padding: 15rpx;margin: 10rpx;
    font-size: 17px;
    text-align: center;
    border-radius: 10rpx;
    color: var(--white);
    background-color: #B4B4B4;
}

.theme-content .active{
    background-color: var(--blue);
}

.theme-title button{
    color: var(--white);
    background-color: #B6B6B6;
}

.other-button-hover{
    color: white;
    background-color: blue;
}